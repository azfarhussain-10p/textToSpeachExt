# =================================
# Text-to-Speech Browser Extension
# Environment Configuration
# =================================

# =================================
# AI SERVICE CONFIGURATION
# =================================

# Groq API (Free Tier - Primary AI Provider)
# Sign up at: https://console.groq.com/
# Free tier: 100 requests/hour, 6,000 requests/day
GROQ_API_KEY=your_groq_api_key_here

# Claude API (Paid Service - Secondary AI Provider)
# Sign up at: https://console.anthropic.com/
# Required for advanced explanations and better quality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
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API (Optional - Tertiary AI Provider)
# Sign up at: https://platform.openai.com/
# Fallback option for AI explanations
OPENAI_API_KEY=your_openai_api_key_here

# =================================
# DEVELOPMENT CONFIGURATION
# =================================

# Environment Mode
NODE_ENV=development

# Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true
PERFORMANCE_MONITORING=true

# Development Server
DEV_SERVER_PORT=3000
HOT_RELOAD=true

# =================================
# EXTENSION SETTINGS
# =================================

# Default TTS Configuration
DEFAULT_LANGUAGE=en-US
DEFAULT_VOICE=system-default
DEFAULT_RATE=1.0
DEFAULT_PITCH=1.0
DEFAULT_VOLUME=1.0

# UI Behavior
SELECTION_THRESHOLD=10
OVERLAY_DELAY=300
AUTO_HIDE_DELAY=10000
SHOW_KEYBOARD_SHORTCUTS=true

# Feature Flags
ENABLE_AI_EXPLANATIONS=true
ENABLE_MULTI_LANGUAGE_TTS=true
ENABLE_VOICE_SELECTION=true
ENABLE_OFFLINE_MODE=false

# =================================
# PRIVACY & ANALYTICS
# =================================

# Privacy Settings
ANALYTICS_ENABLED=false
ERROR_REPORTING_ENABLED=true
USAGE_STATISTICS=false
DATA_COLLECTION_OPT_IN=required

# Analytics Services (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SENTRY_DSN=

# =================================
# BROWSER-SPECIFIC SETTINGS
# =================================

# Chrome Web Store
CHROME_EXTENSION_ID=
CHROME_CLIENT_ID=
CHROME_CLIENT_SECRET=

# Firefox Add-ons
FIREFOX_ADDON_ID=
FIREFOX_API_KEY=
FIREFOX_API_SECRET=

# Safari App Store
SAFARI_TEAM_ID=
SAFARI_BUNDLE_ID=

# Edge Add-ons
EDGE_PRODUCT_ID=

# =================================
# API RATE LIMITING
# =================================

# Groq API Limits
GROQ_REQUESTS_PER_HOUR=100
GROQ_REQUESTS_PER_DAY=6000
GROQ_MAX_TOKENS=8192

# Claude API Limits
CLAUDE_REQUESTS_PER_MINUTE=60
CLAUDE_MAX_TOKENS=200000
CLAUDE_MODEL=claude-3-haiku-20240307

# OpenAI API Limits
OPENAI_REQUESTS_PER_MINUTE=60
OPENAI_MAX_TOKENS=4096
OPENAI_MODEL=gpt-3.5-turbo

# =================================
# PERFORMANCE SETTINGS
# =================================

# Memory Management
MAX_MEMORY_USAGE=50
GARBAGE_COLLECTION_INTERVAL=300000

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600000
MAX_CACHE_SIZE=100

# Network Timeouts
API_TIMEOUT=5000
TTS_TIMEOUT=30000
EXPLANATION_TIMEOUT=10000

# =================================
# ACCESSIBILITY SETTINGS
# =================================

# Screen Reader Support
ARIA_ANNOUNCEMENTS=true
KEYBOARD_NAVIGATION=true
HIGH_CONTRAST_MODE=auto

# Mobile Optimization
TOUCH_FRIENDLY_CONTROLS=true
RESPONSIVE_OVERLAY=true
MINIMUM_TOUCH_TARGET=44

# =================================
# SECURITY CONFIGURATION
# =================================

# Content Security Policy
CSP_ENABLED=true
BLOCK_INLINE_SCRIPTS=true
ALLOW_UNSAFE_EVAL=false

# API Security
ENCRYPT_API_KEYS=true
ROTATE_KEYS_INTERVAL=2592000000
VALIDATE_ORIGINS=true

# User Data Protection
ENCRYPT_USER_DATA=true
AUTO_CLEAR_HISTORY=true
REQUIRE_CONSENT=true

# =================================
# TESTING CONFIGURATION
# =================================

# Test Environment
TEST_TIMEOUT=30000
HEADLESS_BROWSER=true
SCREENSHOT_ON_FAILURE=true

# Mock Services
MOCK_AI_RESPONSES=false
MOCK_TTS_SERVICE=false
MOCK_STORAGE=false

# Coverage Requirements
MIN_COVERAGE_THRESHOLD=85
COVERAGE_REPORT_FORMAT=html

# =================================
# BUILD CONFIGURATION
# =================================

# Build Settings
MINIFY_CODE=true
SOURCE_MAPS=true
TREE_SHAKING=true
CODE_SPLITTING=true

# Asset Optimization
OPTIMIZE_IMAGES=true
COMPRESS_ASSETS=true
GENERATE_ICONS=true

# Bundle Analysis
ANALYZE_BUNDLE=false
BUNDLE_SIZE_LIMIT=2000000

# =================================
# DEPLOYMENT SETTINGS
# =================================

# Version Management
VERSION_AUTO_INCREMENT=true
CHANGELOG_AUTO_UPDATE=true

# Store Submission
AUTO_SUBMIT_CHROME=false
AUTO_SUBMIT_FIREFOX=false
AUTO_SUBMIT_SAFARI=false

# Update Channels
UPDATE_CHANNEL=stable
BETA_TESTING_ENABLED=false
STAGED_ROLLOUT=true

# =================================
# INTERNATIONALIZATION
# =================================

# Supported Languages
SUPPORTED_LANGUAGES=en,ar,ur,es,fr,de,hi,pt,it,ja,ko,zh,ru,nl,sv
DEFAULT_LOCALE=en
RTL_LANGUAGES=ar,ur,he,fa

# Translation Services
TRANSLATION_SERVICE=none
AUTO_TRANSLATE_UI=false
CROWDSOURCE_TRANSLATIONS=false

# =================================
# MONITORING & LOGGING
# =================================

# Log Levels
LOG_LEVEL=info
CONSOLE_LOGGING=true
FILE_LOGGING=false

# Performance Monitoring
MONITOR_MEMORY_USAGE=true
MONITOR_API_LATENCY=true
MONITOR_USER_INTERACTIONS=false

# Error Tracking
TRACK_JAVASCRIPT_ERRORS=true
TRACK_API_ERRORS=true
TRACK_PERMISSION_ERRORS=true

# Health Checks
HEALTH_CHECK_INTERVAL=60000
API_HEALTH_MONITORING=true
EXTENSION_HEALTH_REPORTING=true